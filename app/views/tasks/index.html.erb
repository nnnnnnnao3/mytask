<div class='top-page-header'>
<%= render "shared/header" %>
</div>
<div class="tasks-index-bg">
  <div class="bg-overlay"></div> <!-- 背景画像のオーバーレイ -->

  <p><%= link_to '●New Task●', new_task_path,class:"task-title" %></p>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.title, "#" %>
        <%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>

</div>
